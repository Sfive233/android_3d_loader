<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/PropertyGroup">

    <RelativeLayout
        android:id="@+id/property_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PropertyGroupTitle">
        <TextView
            android:id="@+id/property_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="GroupName"
            style="@style/PropertyGroupTitle.Name" />
        <ImageView
            android:id="@+id/property_group_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_left" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/property_group_subs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/PropertyGroupSubs" />

</LinearLayout>