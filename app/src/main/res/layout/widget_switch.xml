<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/PropertyWidgetSwitch">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/PropertyWidgetSwitch.Sub">

        <TextView
            android:id="@+id/switch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/switch_val"
            app:layout_constraintTop_toTopOf="parent"
            android:text="property name"
            style="@style/PropertyWidgetSwitch.Sub.Name"/>

        <Switch
            android:id="@+id/switch_val"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/switch_name"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/PropertyWidgetSwitch.Sub.Switch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>